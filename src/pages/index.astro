---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import Scripts from "../components/Scripts.astro";
---

<Layout title="English IA Practice">
	<main class="container">
		<header class="container__header">
			<h1 class="header__title">
				English IA <span class="span">Practice</span>
			</h1>
		</header>

		<section class="container__input">
			<Button />
			<h2 class="input__title">Say Hi</h2>
			<textarea
				id="prompt"
				cols="30"
				rows="10"
				class="container__prompt visible"
				>Generate 5 sentences about...
			</textarea>
		</section>

		<section class="container__input">
			<label for="input-text" class="input__title"> Write a message</label>
			<input
				class="input__text"
				placeholder="Differents jobs"
				id="input-text"
			/>
		</section>

		<div class="container__btn">
			<button class="btn__submit" id="btn-submit">Send message</button>
		</div>
	</main>
</Layout>
<footer class="container --footer">
	<section class="container__information">
		<div class="information__group">
			<h2 class="information__text">Author:</h2>
			<p class="information__text">Csc32</p>
		</div>
	</section>
	<section class="container__information">
		<h2 class="information__title --social">Social Networks:</h2>
		<div class="container__social">
			<img
				class="social__image"
				src="/github-icon.svg"
				alt="github"
				id="github"
			/>
			<img
				class="social__image"
				src="/linkdin-icon.svg"
				alt="LinkDin"
				id="linkdin"
			/>
			<img
				class="social__image"
				src="/twitter-icon.svg"
				alt="twitter"
				id="twitter"
			/>
		</div>
	</section>
</footer>
<Scripts />
